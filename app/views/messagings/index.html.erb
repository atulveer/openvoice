<h1>your messages (sms/im)</h1>

<%= link_to 'new message', new_user_messaging_path(current_user) %>

<br />

<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Text</th>
    <th>Time</th>
  </tr>

  <% @messagings.each do |messaging| %>
      <tr>
    <td><%=h messaging.from %></td>
    <td><%=h messaging.to %></td>
    <td><%=h messaging.text %></td>
    <td><%=h messaging.created_at %></td>
    <td><%= link_to 'Reply', new_user_messaging_path(current_user, { :to => messaging.from }) %></td>
    <td><%= link_to 'Show', user_messaging_path(current_user, messaging) %></td>
    <td><%= link_to 'Destroy', user_messaging_path(current_user, messaging), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table>

